    $('.activating.element')
        .popup()
    ;

    $('#rate.content')
        .popup({
            inline: true
        })
    ;

    $('#rate.image')
        .popup({
            inline: true
        })
    ;

    $('#rate.ui.two.bottom.attached.buttons')
